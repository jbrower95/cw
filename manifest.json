{
"manifest_version": 2,
    "name": "Content-Warning",
    "short_name": "CW",
    "description": "Automatically hide CW posts on facebook.",
    "version": "0.4",
    "permissions": [
          "storage",
          "tabs"
    ],
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
               "128": "icon128.png" },
    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.facebook.com/*"
            ],
            "js": [
                "jquery.min.js", "storage.js", "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}